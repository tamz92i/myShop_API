{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".", // Changé de "src" à "." pour inclure tous les dossiers
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "config"], // Ajout explicite du dossier config
  "exclude": ["node_modules", "**/*.spec.ts"]
}